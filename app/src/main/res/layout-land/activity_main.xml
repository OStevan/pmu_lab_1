<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:refreshable="com.example.os130004.test.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/insert_layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:id="@+id/insert_fields">

            <EditText
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:hint="@string/Buyer"
                android:ems="10"
                android:id="@+id/buyer"
                android:layout_alignParentTop="true"
                android:freezesText="true"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:hint="@string/Article"
                android:ems="10"
                android:layout_toEndOf="@id/buyer"
                android:id="@+id/article"
                android:freezesText="true"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:inputType="number"
                android:hint="@string/Quantity"
                android:ems="10"
                android:id="@+id/qty"
                android:layout_toEndOf="@+id/article"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/radio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/insert_fields">

            <Button
                android:text="@string/add"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:id="@+id/add"
                android:layout_alignParentTop="true"/>

            <RadioGroup
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_toEndOf="@id/add"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radio_buyer"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="@string/Buyer"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/radio_article"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="@string/Article"/>
            </RadioGroup>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/insert_layout">
        <Button
            android:id="@+id/previous"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/previous"
            android:onClick="previous"
            android:layout_alignParentTop="true"/>
        <ListView
            android:id="@+id/list"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/previous" />
        <Button
            android:id="@+id/next"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/next"
            android:onClick="next"
            android:layout_toEndOf="@id/list"/>
    </RelativeLayout>
</RelativeLayout>
